<?xml version="1.0" encoding="UTF-8"?>

<?import at.htl.erikmayrhofer.organigrampane.OrganigramPane?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
       <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <GridPane minWidth="200.0">
               <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               </columnConstraints>
               <rowConstraints>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
               </rowConstraints>
              <children>
                  <TextField fx:id="firstNameField" promptText="Firstname" GridPane.columnIndex="1">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="lastNameField" promptText="Lastname" GridPane.columnIndex="2">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <DatePicker fx:id="datePicker" promptText="Birthdate" GridPane.columnIndex="1"
                              GridPane.columnSpan="2" GridPane.rowIndex="1">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </DatePicker>
                  <TextField fx:id="birthCityField" promptText="Birthcity" GridPane.columnIndex="1"
                             GridPane.columnSpan="2" GridPane.rowIndex="2">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="streetField" promptText="Street" GridPane.columnIndex="1" GridPane.rowIndex="3">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="numberField" promptText="Number" GridPane.columnIndex="2" GridPane.rowIndex="3">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="zipCodeField" promptText="ZipCode" GridPane.columnIndex="1" GridPane.rowIndex="4">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="cityField" promptText="City" GridPane.columnIndex="2" GridPane.rowIndex="4">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="emailField" promptText="E-Mail" GridPane.columnIndex="1" GridPane.columnSpan="2"
                             GridPane.rowIndex="5">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <TextField fx:id="socialSecurityNumberField" promptText="Social Security Number"
                             GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </TextField>
                  <Label text="Name" GridPane.halignment="RIGHT">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </Label>
                  <Label text="Birthdate" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </Label>
                  <Label text="Birthcity" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </Label>
                  <Label text="Address" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </Label>
                  <Label text="E-Mail" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </Label>
                  <Label text="Social Security Number" GridPane.halignment="RIGHT" GridPane.rowIndex="6">
                      <GridPane.margin>
                          <Insets/>
                      </GridPane.margin>
                  </Label>
              </children>
              <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
              </VBox.margin>
           </GridPane>
           <OrganigramPane VBox.vgrow="ALWAYS" fx:id="organigramPane"/>
       </VBox>
   </center>
</fx:root>
